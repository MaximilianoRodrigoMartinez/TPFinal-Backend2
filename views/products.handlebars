<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}} - TP Backend</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-store"></i> TP Backend
            </a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/">
                    <i class="fas fa-home"></i> Inicio
                </a>
                <a class="nav-link" href="/products">
                    <i class="fas fa-boxes"></i> Productos
                </a>
                <a class="nav-link" href="/realtimeproducts">
                    <i class="fas fa-bolt"></i> Tiempo Real
                </a>
            </div>
        </div>
    </nav>

    <main class="container mt-4">
        <div class="row">
            <div class="col-12">
                <h1 class="mb-4">
                    <i class="fas fa-boxes"></i> Lista de Productos
                </h1>
                
                <!-- Filtros y ordenamiento -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <form method="GET" action="/products" class="d-flex gap-2">
                            <select name="query" class="form-select" style="width: auto;">
                                <option value="">Todas las categorías</option>
                                <option value="category:Electrónicos">Electrónicos</option>
                                <option value="category:Ropa">Ropa</option>
                                <option value="category:Hogar">Hogar</option>
                                <option value="category:Deportes">Deportes</option>
                            </select>
                            <select name="sort" class="form-select" style="width: auto;">
                                <option value="">Sin ordenar</option>
                                <option value="asc">Precio: Menor a Mayor</option>
                                <option value="desc">Precio: Mayor a Menor</option>
                            </select>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-filter"></i> Filtrar
                            </button>
                        </form>
                    </div>
                </div>

                {{#if payload.length}}
                    <div class="row">
                        {{#each payload}}
                        <div class="col-md-4 mb-4">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h5 class="card-title">{{title}}</h5>
                                    <p class="card-text">{{description}}</p>
                                    <div class="mb-2">
                                        <span class="badge bg-primary">{{category}}</span>
                                        <span class="badge bg-success">Stock: {{stock}}</span>
                                    </div>
                                    <p class="card-text">
                                        <strong>Precio: ${{price}}</strong>
                                    </p>
                                    <p class="card-text">
                                        <small class="text-muted">Código: {{code}}</small>
                                    </p>
                                </div>
                                <div class="card-footer d-flex justify-content-between">
                                    <a href="/products/{{_id}}" class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-eye"></i> Ver Detalles
                                    </a>
                                    <button class="btn btn-success btn-sm" onclick="addToCart(
\
{_id}
\')">
                                        <i class="fas fa-cart-plus"></i> Agregar
                                    </button>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>

                    <!-- Paginación -->
                    <nav aria-label="Paginación de productos">
                        <ul class="pagination justify-content-center">
                            {{#if hasPrevPage}}
                                <li class="page-item">
                                    <a class="page-link" href="{{prevLink}}">
                                        <i class="fas fa-chevron-left"></i> Anterior
                                    </a>
                                </li>
                            {{/if}}
                            
                            <li class="page-item active">
                                <span class="page-link">Página {{page}} de {{totalPages}}</span>
                            </li>
                            
                            {{#if hasNextPage}}
                                <li class="page-item">
                                    <a class="page-link" href="{{nextLink}}">
                                        Siguiente <i class="fas fa-chevron-right"></i>
                                    </a>
                                </li>
                            {{/if}}
                        </ul>
                    </nav>
                {{else}}
                    <div class="alert alert-info" role="alert">
                        <i class="fas fa-info-circle"></i> No hay productos disponibles.
                    </div>
                {{/if}}
            </div>
        </div>
    </main>

    <footer class="bg-dark text-light text-center py-3 mt-5">
        <div class="container">
            <p>&copy; 2024 TP Backend - Node.js & Express</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function addToCart(productId) {
            // Crear un carrito temporal o usar uno existente
            fetch("/api/carts", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.status === "success") {
                    const cartId = data.payload._id;
                    return fetch(`/api/carts/${cartId}/product/${productId}`, {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json"
                        },
                        body: JSON.stringify({ quantity: 1 })
                    });
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.status === "success") {
                    alert("Producto agregado al carrito exitosamente");
                } else {
                    alert("Error al agregar producto al carrito");
                }
            })
            .catch(error => {
                console.error("Error:", error);
                alert("Error al agregar producto al carrito");
            });
        }
    </script>
</body>
</html>
